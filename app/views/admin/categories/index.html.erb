<table>
  <tr>
      <th>Category name</th>
      <th>Parent category</th>
      <th>Number of products</th>
  </tr>
  <% @categories.each do |category| %>
    <tr>
    <td><%= link_to category.name, category_books_path(category.id) %></td>
      <td><%= category.parent.try(:name) || '-' %></td>
      <td><%= category.products_count %></td>
    </tr>
  <% end %>
</table>
